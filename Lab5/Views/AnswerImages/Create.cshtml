@{
    ViewData["Title"] = "Create";
}

<h1>Upload</h1>

<h4>Answer question via image upload</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="custom-radio">

                <div class="btn btn-sm float-left">
                    <p>
                        <input name="question" type="radio" value="Computer">What will the computers look like in 20 years?<br />
                        <input name="question" type="radio" value="Earth">What will the earth look like in 20 years?<br /><br />
                    </p>
                </div>
            </div>
            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="file" type="file">
                </div>
            </div>

            <div class="form-group">
                <button name="upload" class="btn btn-primary">Upload now</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}